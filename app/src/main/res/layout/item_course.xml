<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"
                android:layout_margin="8dp"
                android:text="asdasdasasdasd"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bnTest"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/textColor"/>

        <Button
            android:id="@+id/bnInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Изучение"
            android:layout_marginEnd="8dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/background_button_with_corners"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bnTest"/>
        <Button
            android:id="@+id/bnTest"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Тестирование"
            android:background="@drawable/background_button_with_corners"
            android:textColor="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@id/bnInfo"
            app:layout_constraintBottom_toBottomOf="@id/bnInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bnInfo"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>